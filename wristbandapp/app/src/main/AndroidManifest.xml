<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.justinkhoo.wristbandapp" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.justinkhoo.wristbandapp.activity1"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.justinkhoo.wristbandapp.Monitor"
            android:label="@string/title_activity_monitor" >
        </activity>
        <activity
            android:name="com.example.justinkhoo.wristbandapp.ChartDemo"
            android:label="AChartEngine demo" >
        </activity>
        <activity android:name="com.example.justinkhoo.wristbandapp.chart.XYChartBuilder" />
        <activity android:name="com.example.justinkhoo.wristbandapp.chart.PieChartBuilder" />
        <activity android:name="org.achartengine.GraphicalActivity" />
        <activity android:name="com.example.justinkhoo.wristbandapp.GeneratedChartDemo" />
        <activity
            android:name="com.example.justinkhoo.wristbandapp.sensorchart"
            android:label="@string/title_activity_sensorchart" >
        </activity>
    </application>

</manifest>
