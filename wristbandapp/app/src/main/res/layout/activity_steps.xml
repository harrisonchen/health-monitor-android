<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.justinkhoo.wristbandapp.Steps">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Statistics"
        android:background="@drawable/blue_button"
        android:id="@+id/statisticsButton"
        android:textSize="28sp"
        android:textColor="#FFFFFF"
        android:padding="14sp"
        android:width="300sp"
        android:layout_marginTop="8sp"
        android:layout_marginBottom="8sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1337"
        android:textSize="100sp"
        android:textColor="#000000"
        android:id="@+id/stepsTextView"
        android:layout_above="@+id/stepsIcon"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Goals"
        android:background="@drawable/orange_button"
        android:id="@+id/goalsButton"
        android:textSize="28sp"
        android:textColor="#FFFFFF"
        android:padding="14sp"
        android:width="300sp"
        android:layout_above="@+id/statisticsButton"
        android:layout_alignLeft="@+id/statisticsButton"
        android:layout_alignStart="@+id/statisticsButton" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stepsIcon"
        android:src="@drawable/icon_footsteps"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&#xf12d;"
        android:textSize="32sp"
        android:background="@android:color/transparent"
        android:id="@+id/clearButton"
        android:padding="8sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
