<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FFFFFF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.justinkhoo.wristbandapp.Lobby">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lobbyListView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/syncButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Health"
        android:background="@drawable/orange_button"
        android:id="@+id/myHealthButton"
        android:textSize="28sp"
        android:textColor="#FFFFFF"
        android:padding="14sp"
        android:width="300sp"
        android:layout_marginTop="8sp"
        android:layout_marginBottom="8sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:visibility="invisible"
        android:id="@+id/centerView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&#xf0ee;"
        android:onClick="syncData"
        android:textColor="@drawable/sync_button"
        android:textSize="100sp"
        android:background="@android:color/transparent"
        android:id="@+id/syncButton"
        android:layout_above="@+id/button2"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergency Contacts"
        android:id="@+id/button2"
        android:background="@drawable/orange_button"
        android:textSize="28sp"
        android:textColor="#FFFFFF"
        android:padding="14sp"
        android:width="300sp"
        android:onClick="goToContact"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/myHealthButton" />


</RelativeLayout>
